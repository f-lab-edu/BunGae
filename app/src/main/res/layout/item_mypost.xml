<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.example.bungae.data.ItemData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/image_mypost_category"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:src="@drawable/img_everything" />

        <TextView
            android:id="@+id/tv_mypost_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{data.title}"
            android:textSize="23sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/image_mypost_category"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_mypost_address"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="15dp" />

        <TextView
            android:id="@+id/tv_mypost_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{data.address}"
            app:layout_constraintStart_toEndOf="@id/image_mypost_category"
            app:layout_constraintTop_toBottomOf="@id/tv_mypost_title"
            app:layout_constraintBottom_toTopOf="@id/tv_mypost_date"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="15dp" />

        <TextView
            android:id="@+id/tv_mypost_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{data.date}"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/image_mypost_category"
            app:layout_constraintTop_toBottomOf="@id/tv_mypost_address"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="15dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>